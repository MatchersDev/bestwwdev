const Discord = require('discord.js');
const bot = new Discord.Client();



const token = 'NjA4Mjk3OTQ4NTEzNjk3Nzky.XUmHsg.Oyte-B5Hn5K3WsbQMzvtcTGqOo4';

const PREFIX = '$';

bot.on('ready' ,()=>{

    console.log('This bot is online!');

})

bot.on('guildMemberAdd', member =>{

    const channel = member.guild.channels.find(channel => channel.name === "welcome");
if(!channel) return;


channel.send(`Welcome to our server, enjoy your stay!, ${member}`)
});


bot.on('message', message=>{

let args = message.content.substring(PREFIX.length).split(" ");

switch(args[0]){
    case 'ping':
        message.channel.sendMessage('pong!')
        break;
        case 'website':
            message.channel.sendMessage('youtube.com/c/pocked')
            break;
            case 'info':
                message.channel.sendMessage('Look in the #information channel!')



            
}
})

bot.login(token);

